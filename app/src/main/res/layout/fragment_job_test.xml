<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:showIn="@layout/fragment_job_list"
    android:background="#FFFF66">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="176dp"
        card_view:contentPadding="@dimen/activity_horizontal_margin"
        card_view:cardCornerRadius="3dp"
        android:background="#FFFF66"
        android:contextClickable="true">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$28.00"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/nameText"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="65dp"
                android:scaleType="fitStart"
                android:src="@drawable/cleaning"
                android:contentDescription="@string/picturedesc"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean my apartment"
                android:textSize="18sp"

                android:singleLine="true"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_map_marker_black_18dp"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/kmText"
                android:textSize="14sp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toLeftOf="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/kongens_lyngby"
                android:id="@+id/locationText"
                android:layout_below="@+id/priceText"
                android:layout_centerHorizontal="true"
                android:textSize="14sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
